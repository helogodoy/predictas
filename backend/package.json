{
  "name": "backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "start:prod": "node dist/server.js",
    "postinstall": "npm run build",
    "pm2:start": "pm2 start dist/server.js --name predictas-api",
    "pm2:save": "pm2 save",
    "pm2:startup": "pm2 startup windows",
    "db:init": "node ./scripts/run-sql.js ./database/predictas.sql",
    "db:trigger": "node ./scripts/run-sql.js ./database/add-trigger.sql",
    "db:user": "node ./scripts/run-sql.js ./database/add-usuarios.sql",
    "db:seed": "node ./scripts/run-sql.js ./database/test-seed.sql",
    "db:ping": "node ./scripts/ping-db.js",
    "whoami": "node ./scripts/whoami-db.js",
    "setpass": "node ./scripts/set-password.js"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.15.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.7.5",
    "tsx": "^4.19.0",
    "typescript": "^5.6.3"
  }
}
