{
  "extends": "./tsconfig.base.json",
  
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021", "DOM", "DOM.Iterable", "ES2020.Intl"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "isolatedModules": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "env.d.ts"],
  "exclude": ["api", "node_modules", "dist", "src/pages/login.js", "./src/pages/login.js"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
